mcdp {
  sub sensor_selection = instance `detection.sensor_selection
  sub time_to_impact_reduction = instance `detection.time_to_impact_reduction 
   
  sensor_array required by time_to_impact_reduction <= sensor_array provided by sensor_selection
  requires cost for sensor_selection
  provides time_to_impact using time_to_impact_reduction
  
  ignore unconnected
}
